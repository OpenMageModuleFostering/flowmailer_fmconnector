<config>
  <tabs>
    <flowmailer module="fmconnector" translate="label">
      <label>Flowmailer</label>
      <sort_order>600</sort_order>
      <show_in_default>1</show_in_default>
      <show_in_website>1</show_in_website>
      <show_in_store>1</show_in_store>
    </flowmailer>
  </tabs>
  <sections>
    <fmconnector module="fmconnector" translate="label">
      <class>separator-top</class>
      <label>API Connector</label>
      <tab>flowmailer</tab>
      <frontend_type>text</frontend_type>
      <sort_order>110</sort_order>
      <show_in_default>1</show_in_default>
      <show_in_website>1</show_in_website>
      <show_in_store>1</show_in_store>
      <groups>
        <general module="fmconnector" translate="label comment">
          <label>Credentials</label>
          <frontend_type>text</frontend_type>
          <sort_order>10</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>
	  <comment><![CDATA[ Please configure your Flowmailer API credentials below. Create the Flows you want to use and select "Connect to Flowmailer" for the transactional messages you want us to handle. ]]></comment>
          <fields>
            <api_account_id translate="label">
              <label>Account ID</label>
              <frontend_type>text</frontend_type>
              <sort_order>23</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </api_account_id>
            <api_client_id translate="label">
              <label>Client ID</label>
              <frontend_type>text</frontend_type>
              <sort_order>23</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </api_client_id>
            <api_client_secret translate="label">
              <label>Client Secret</label>
              <frontend_type>password</frontend_type>
              <backend_model>adminhtml/system_config_backend_encrypted</backend_model>
              <sort_order>26</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </api_client_secret>
          </fields>
        </general>
      </groups>
    </fmconnector>
  </sections>
</config>
